{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Entity Styles",
  "definitions": {
    "styles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "thumbnail": {
          "$ref": "#/definitions/image"
        },
        "hero": {
          "$ref": "#/definitions/image"
        },
        "background": {
          "$ref": "#/definitions/color"
        },
        "text": {
          "$ref": "#/definitions/color"
        },
        "style_modes": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "mode": { "type": "string" },
              "styles": { "$ref": "#/definitions/nestedStyles" }
            },
            "required": ["mode", "styles"]
          }
        }
      }
    },
    "nestedStyles": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "thumbnail": {
          "$ref": "#/definitions/image"
        },
        "hero": {
          "$ref": "#/definitions/image"
        },
        "background": {
          "$ref": "#/definitions/color"
        },
        "text": {
          "$ref": "#/definitions/color"
        }
      }
    },
    "image": {
      "type": "object",
      "properties": {
        "uri": {
          "type": "string",
          "format": "uri"
        },
        "alt": {
          "type": "string"
        }
      },
      "required": ["uri", "alt"]
    },
    "color": {
      "type": "object",
      "properties": {
        "color": {
          "type": "string",
          "pattern": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
        }
      },
      "required": ["color"]
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/styles" },
    {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "light": { "$ref": "#/definitions/styles" },
        "dark": { "$ref": "#/definitions/styles" }
      }
    }
  ]
}
